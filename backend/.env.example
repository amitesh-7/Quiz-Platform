# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=YourAppName

# JWT Secret (Generate a strong random string)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Gemini API Key (Get from Google AI Studio)
GEMINI_API_KEY=your-gemini-api-key

# Gemini API Key 2 (Optional - Fallback for quota limits)
GEMINI_API_KEY_2=your-second-gemini-api-key

# Gemini API Key 3 (Optional - Fallback for quota limits)
GEMINI_API_KEY_3=your-third-gemini-api-key

# Teacher Registration Secret Key (Set a strong secret key)
TEACHER_SECRET_KEY=your-secret-key-here-change-this

# Server Port
PORT=5000

# Node Environment
NODE_ENV=development
